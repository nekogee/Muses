<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#eee"
    android:padding="5dp">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView"
        app:cardCornerRadius="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical">



            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="384dp"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:src="@drawable/homephoto" />

            <LinearLayout
                android:background="@drawable/layer_list"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/play"
                    android:layout_width="69dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"


                    android:autoLink="all"
                    android:background="#fff"
                    android:scaleType="fitStart"
                    android:src="@drawable/play" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="trippin disco balls"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="-30dp"
                    android:layout_marginTop="-2dp"
                    android:textStyle="italic"
                    android:textColor="#333"
                    android:textSize="19sp"
                    />

                <ImageButton
                    android:id="@+id/button_love"
                    android:layout_width="69dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="55dp"
                    android:background="#fff"
                    android:scaleType="fitEnd"
                    android:src="@drawable/like" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:id="@+id/button_share"
                    android:background="#fff"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/choose"/>
            </LinearLayout>

            <TextView
                android:id="@+id/album_name"
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:textColor="#2b2a2a"
                android:textStyle="bold"
                android:text="Vaporwave Collection"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/author_name"
                android:text="by nekogee"
                android:textColor="#403e3e"
                android:textSize="17sp"
                android:layout_marginLeft="15dp"
                android:textStyle="italic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/saying"
                android:textColor="#222"
                android:text="This is a collection of some Vaporwave songs I made. I also uploaded the corresponding projects. Hope you like it."
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:textSize="17sp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>